@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-3 px-md-4">
            <a href="https://github.com/MateusLecchiDev/BlazorApp" style="color:white" target="_blank">GitHub</a>
        </div>

        <article class="content px-3 px-md-4">
            @Body
        </article>
    </main>
</div>

